<header>
	<a href="/"><img src="/assets/missql-logo-8.png" alt="MISSQL COMMAND" class="header-logo" /></a>
	
	<% if @level %>
		<%= link_to "Previous Level", "/levels/#{@level.prev_level.stage_number}" if @level.prev_level %>
		<%= @level.stage_number %>
		<%= link_to "Next Level", "/levels/#{@level.next_level.stage_number}" if @level.next_level %>
	<% end %>	

	<% if current_user -%>
	<nav>
		<span>Levels â–¾</span>
		<ul class="nav-links">
			<% @levels.each do |level| %>
			<li <%= "class = completed" if current_user.has_completed?(level) %>><%= link_to "##{level.stage_number.to_s} #{level.title}", "/levels/#{level.stage_number}" %> </li>
			<% end %>
		</ul>
	</nav>
	<% end %>

		<span class="session"><% if current_user -%>
		<%= "#{current_user.display_name} | " -%>
		<%= link_to("Logout", logout_path) -%>
	<% else -%>
		<%= link_to("Sign Up", users_new_path) -%> or
		<%= link_to("Login", login_path) -%>
	<% end -%></span>

</header>