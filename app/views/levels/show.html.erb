<div id="next-level-modal">
	<div class="modal-content">
		<h1>Congratulations, you passed this challenge!</h1>	
		<%= link_to "Move on to the next level >","/levels/#{@level.next_level.stage_number}" if @level.next_level %>
	</div>
</div>
<section id="left-pane" class="pane unselectable">
	<aside id="portrait">
	</aside>
	<div id="hed">
	<h1><%= @level.title %></h1>
	<h3><%= @level.prompt %></h3>
	</div>
	<div id="level-pages">
	<h4>LEVEL INSTRUCTIONS:</h4>
		<% @level_pages.each_with_index do |page, i| %>
		<article data-page-number="<%= i %>" class="selectable-text level-page <% if i == 0  %>active<% end %>"><%= page.content.html_safe %></article>
		<% end %>
		<% if @level_pages.length > 1 %>
			<%= render partial:"pages_nav.html" %>
		<% end %>
	</div>
</section>
<section id="repl">
	<div id="output">
		<pre id="output-text"></pre>
	</div>
	<div id="command-input" class="pane">
		<textarea id="sql-command" autofocus></textarea>
		<button type="button" id="execute">EXECUTE</button>
	</div>
</section>
