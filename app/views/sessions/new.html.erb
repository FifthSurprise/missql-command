<h1>Login</h1>
<%= flash[:notice] %>

<%= form_tag(sessions_path) do %>
  <p>  
    <%= label_tag "user_name","Username:" %>
    <input id="user_name" name="user[user_name]" type="text" />
  </p>

  <p>  
    <%= label_tag "password" %>
    <input id="password" name="user[password]" type="password" />
  </p>

  <%= submit_tag "Login" %>

<% end %>